---
import Layout from '../layouts/Layout.astro';

const areas = [
  {
    name: "Newcastle",
    description: "Located centrally in Broadmeadow, we are just minutes from the CBD, Hamilton, Mayfield, and Merewether.",
  },
  {
    name: "Lake Macquarie",
    description: "A short drive for players from Charlestown, Belmont, Warners Bay, and Toronto.",
  },
  {
    name: "Maitland & Lower Hunter",
    description: "Easily accessible via the New England Highway for players in Maitland, Cessnock, and Kurri Kurri.",
  },
  {
    name: "Hunter Valley",
    description: "Welcoming players from Singleton, Muswellbrook, and the wider region.",
  },
];
---

<Layout 
  title="Servicing the Hunter Region | Newcastle Table Tennis"
  description="Newcastle Table Tennis Club welcomes players from Newcastle, Lake Macquarie, Maitland, and the Hunter Valley."
>
  <div class="bg-white py-16 min-h-screen">
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h1 class="text-3xl font-bold tracking-tight text-neutral-900 sm:text-4xl">
            Table Tennis for the Hunter Region
        </h1>
        <p class="mt-4 text-xl text-neutral-600 max-w-2xl mx-auto">
            Our central location at PCYC Broadmeadow makes us the hub for table tennis in the region.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 mb-16">
        {areas.map((area) => (
            <div class="bg-neutral-50 rounded-xl p-8 border border-neutral-100 hover:border-primary-200 transition-colors">
                <h3 class="text-xl font-bold text-neutral-900 mb-3">{area.name}</h3>
                <p class="text-neutral-600 leading-relaxed">
                    {area.description}
                </p>
            </div>
        ))}
      </div>

      <div class="bg-white rounded-2xl border border-neutral-200 p-8 shadow-sm">
        <div class="flex flex-col md:flex-row items-center justify-between gap-8">
            <div>
                <h3 class="text-lg font-bold text-neutral-900">Getting Here</h3>
                <p class="text-neutral-600 mt-2">
                    We are located at Young Road, Broadmeadow. Plenty of free on-site parking is available.
                </p>
            </div>
             <a href="/location" class="flex-shrink-0 inline-flex items-center justify-center px-6 py-3 border border-neutral-300 text-base font-medium rounded-lg text-neutral-700 bg-white hover:bg-neutral-50 transition">
                View Map & Directions
            </a>
        </div>
      </div>

    </div>
  </div>
</Layout>
