---
import Layout from '../layouts/Layout.astro';

const sessions = [
    { 
        day: "Monday", 
        time: "6:30 PM - 10:00 PM", 
        type: "Social & Competition",
        description: "Our weekly competition night combined with social play. Graded matches for competitors, and open tables for social hits.",
        tag: "Comp & Social"
    },
    { 
        day: "Wednesday", 
        time: "6:30 PM - 10:00 PM", 
        type: "Social & Competition",
        description: "Mid-week session featuring both competition matches and social tables. A great atmosphere for all skill levels.",
        tag: "Comp & Social"
    },
    { 
        day: "Saturday", 
        time: "2:30 PM - 6:00 PM", 
        type: "Social Play",
        description: "Relaxed weekend session. Perfect for practice, families, and casual games.",
        tag: "Social Play"
    },
    { 
        day: "Sunday", 
        time: "Time Varies", 
        type: "Social Play",
        description: "Additional sessions announced weekly via email and our Facebook group.",
        tag: "Social Play"
    },
];
---

<Layout title="Weekly Timetable | Newcastle Table Tennis" description="Play table tennis in Newcastle on Monday, Wednesday, Saturday, and Sunday. See our full schedule.">
  <div class="bg-neutral-50 min-h-screen py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <div class="text-center mb-16">
        <h1 class="text-5xl font-heading font-bold text-neutral-900 uppercase tracking-tight mb-4">Weekly Schedule</h1>
        <p class="text-xl text-neutral-600 max-w-2xl mx-auto">
            No booking requiredâ€”just turn up and play.
        </p>
      </div>
      
      <!-- Professional Timetable Layout -->
      <div class="max-w-5xl mx-auto bg-white rounded-2xl shadow-sm border border-neutral-200 overflow-hidden">
        <div class="grid grid-cols-1 divide-y divide-neutral-200">
            
            {sessions.map((session) => (
                <div class="p-8 md:p-10 flex flex-col md:flex-row md:items-center gap-6 md:gap-12 hover:bg-neutral-50 transition-colors">
                    
                    <!-- Time & Day -->
                    <div class="md:w-1/4 flex-shrink-0">
                        <h3 class="text-3xl font-heading font-bold text-neutral-900 uppercase mb-1">{session.day}</h3>
                        <div class="text-brand-600 font-bold text-lg flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            {session.time}
                        </div>
                    </div>

                    <!-- Details -->
                    <div class="md:w-3/4">
                        <div class="flex items-center gap-3 mb-2">
                            <h4 class="text-xl font-bold text-neutral-900 uppercase">{session.type}</h4>
                            <span class={`inline-flex items-center px-2.5 py-0.5 rounded text-xs font-bold uppercase tracking-wide border ${session.tag.includes('Comp') ? 'bg-neutral-900 text-white border-neutral-900' : 'bg-white text-neutral-600 border-neutral-200'}`}>
                                {session.tag}
                            </span>
                        </div>
                        <p class="text-neutral-600 leading-relaxed text-lg">
                            {session.description}
                        </p>
                    </div>

                </div>
            ))}

        </div>
      </div>

      <!-- Info Box -->
      <div class="max-w-5xl mx-auto mt-12 bg-neutral-900 rounded-xl p-8 md:p-10 border border-neutral-800 flex flex-col md:flex-row items-center justify-between gap-8 text-center md:text-left shadow-lg">
        <div>
            <h3 class="font-heading font-bold text-2xl text-white uppercase">First Time?</h3>
            <p class="text-neutral-400 mt-2 text-lg">
                Your first session is free. Just wear comfortable clothes.
            </p>
        </div>
        <div class="flex-shrink-0">
             <a href="/expect" class="inline-block bg-brand-600 text-white font-bold py-3 px-8 rounded-md hover:bg-brand-700 transition uppercase tracking-wide shadow-md transform hover:-translate-y-0.5">
                Read the Guide
            </a>
        </div>
      </div>
      
    </div>
  </div>
</Layout>
