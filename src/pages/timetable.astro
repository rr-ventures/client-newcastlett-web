---
import Layout from '../layouts/Layout.astro';

const sessions = [
    { 
        day: "Monday", 
        time: "6:30 PM - 10:00 PM", 
        type: "Social & Competition",
        description: "This session combines both competitive play and social games. Graded competition matches run alongside open tables for casual social hits. Whether you want to test your skills in a competitive match or just have a fun game with friends, there's space for everyone.",
        explanation: "Social & Competition means you can play in organized competitive matches (if you're graded) or simply enjoy casual games on the social tables. The best of both worlds."
    },
    { 
        day: "Wednesday", 
        time: "6:30 PM - 10:00 PM", 
        type: "Social & Competition",
        description: "Mid-week session featuring both competition matches and social tables. A great atmosphere for all skill levels—from beginners looking to practice to experienced players wanting competitive games.",
        explanation: "Social & Competition means you can play in organized competitive matches (if you're graded) or simply enjoy casual games on the social tables. The best of both worlds."
    },
    { 
        day: "Saturday", 
        time: "2:30 PM - 6:00 PM", 
        type: "Social Play",
        description: "Relaxed weekend session perfect for practice, families, and casual games. No competition pressure—just friendly games and a welcoming atmosphere.",
        explanation: "Social Play is all about casual, friendly games. Perfect for beginners, families, or anyone who wants to play without the pressure of competition. Great for improving your skills in a relaxed environment."
    },
    { 
        day: "Sunday", 
        time: "Time Varies", 
        type: "Social Play",
        description: "Additional sessions announced weekly via email and our Facebook group. Times vary based on venue availability and member interest.",
        explanation: "Social Play is all about casual, friendly games. Perfect for beginners, families, or anyone who wants to play without the pressure of competition."
    },
];
---

<Layout title="Weekly Timetable | Newcastle Table Tennis" description="Play table tennis in Newcastle on Monday, Wednesday, Saturday, and Sunday. See our full schedule.">
  <div class="bg-neutral-50 min-h-screen py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <div class="text-center mb-16">
        <h1 class="text-5xl font-heading font-bold text-neutral-900 uppercase tracking-tight mb-4">Weekly Schedule</h1>
        <p class="text-xl text-neutral-600 max-w-2xl mx-auto">
            No booking required—just turn up and play.
        </p>
        <div class="mt-6 flex flex-wrap gap-4 justify-center">
            <a href="/location#send-us-a-message" class="inline-block bg-brand-600 text-white font-bold py-3 px-8 rounded-md hover:bg-brand-700 transition uppercase tracking-wide shadow-md">
                Contact Us
            </a>
            <a href="/expect" class="inline-block bg-white text-neutral-900 font-bold py-3 px-8 rounded-md hover:bg-neutral-100 transition uppercase tracking-wide shadow-md border border-neutral-200">
                What to Expect
            </a>
        </div>
      </div>

      <!-- Schedule Photo -->
      <div class="max-w-5xl mx-auto mb-12">
          <div class="relative h-64 md:h-96 rounded-xl overflow-hidden shadow-lg">
              <img 
                  src="/images/hero-image.jpg" 
                  alt="Table tennis action at Newcastle PCYC" 
                  class="w-full h-full object-cover"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent flex items-end">
                  <div class="p-8 text-white">
                      <p class="text-lg font-medium">Join our community of players every week</p>
                  </div>
              </div>
          </div>
      </div>
      
      <!-- Professional Timetable Layout -->
      <div class="max-w-5xl mx-auto bg-white rounded-2xl shadow-sm border border-neutral-200 overflow-hidden">
        <div class="grid grid-cols-1 divide-y divide-neutral-200">
            
            {sessions.map((session) => (
                <div class="p-8 md:p-10 hover:bg-neutral-50 transition-colors">
                    
                    <!-- Day & Time Header -->
                    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6 pb-4 border-b border-neutral-200">
                        <div>
                            <h3 class="text-3xl font-heading font-bold text-neutral-900 uppercase mb-2">{session.day}</h3>
                            <div class="text-brand-600 font-bold text-lg flex items-center">
                                <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                {session.time}
                            </div>
                        </div>
                        <div class="mt-4 md:mt-0">
                            <span class={`inline-flex items-center px-3 py-1.5 rounded text-sm font-bold uppercase tracking-wide border ${session.type.includes('Competition') ? 'bg-neutral-900 text-white border-neutral-900' : 'bg-white text-neutral-600 border-neutral-200'}`}>
                                {session.type}
                            </span>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="mb-4">
                        <p class="text-neutral-700 leading-relaxed text-lg">
                            {session.description}
                        </p>
                    </div>

                    <!-- Explanation Box -->
                    <div class="bg-neutral-50 rounded-lg p-4 border-l-4 border-brand-600">
                        <p class="text-sm text-neutral-600 italic">
                            <strong class="text-neutral-900">What does "{session.type}" mean?</strong> {session.explanation}
                        </p>
                    </div>

                </div>
            ))}

        </div>
      </div>

      <!-- Info Box -->
      <div class="max-w-5xl mx-auto mt-12 bg-neutral-900 rounded-xl p-8 md:p-10 border border-neutral-800 flex flex-col md:flex-row items-center justify-between gap-8 text-center md:text-left shadow-lg">
        <div>
            <h3 class="font-heading font-bold text-2xl text-white uppercase">First Time?</h3>
            <p class="text-neutral-400 mt-2 text-lg">
                No experience necessary. Come check us out or come play—whatever you're most comfortable with.
            </p>
        </div>
        <div class="flex-shrink-0 flex flex-col sm:flex-row gap-3">
             <a href="/expect" class="inline-block bg-brand-600 text-white font-bold py-3 px-8 rounded-md hover:bg-brand-700 transition uppercase tracking-wide shadow-md transform hover:-translate-y-0.5">
                Read the Guide
            </a>
            <a href="/location#send-us-a-message" class="inline-block bg-white text-neutral-900 font-bold py-3 px-8 rounded-md hover:bg-neutral-100 transition uppercase tracking-wide shadow-md">
                Contact Us
            </a>
        </div>
      </div>
      
    </div>
  </div>
</Layout>
