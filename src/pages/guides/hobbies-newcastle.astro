---
import Layout from '../../layouts/Layout.astro';

const breadcrumbSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {"@type": "ListItem", "position": 1, "name": "Home", "item": "https://www.newcastletabletennis.com.au/"},
    {"@type": "ListItem", "position": 2, "name": "Guides", "item": "https://www.newcastletabletennis.com.au/guides/"},
    {"@type": "ListItem", "position": 3, "name": "Hobbies in Newcastle"}
  ]
});

const faqSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What hobbies can I do in Newcastle NSW?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Newcastle offers diverse hobbies including water sports (surfing, swimming, sailing), racquet sports (table tennis, tennis, squash), outdoor activities (hiking, cycling, fishing), creative pursuits (art, photography, music), and social activities (community groups, sports clubs). The city's coastal location and active community make it ideal for both outdoor and indoor hobbies."
      }
    },
    {
      "@type": "Question",
      "name": "How do I find hobby groups in Newcastle?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Check Facebook Groups, Meetup.com, local libraries, community centres, and sports club websites. Many groups welcome drop-ins, so you can try before committing. For table tennis, you can simply show up to Newcastle PCYC on session nights - no booking required."
      }
    }
  ]
});

const combinedSchema = `[${breadcrumbSchema},${faqSchema}]`;
---

<Layout
  title="Hobbies in Newcastle: Find Your New Passion | 2026 Guide"
  description="Looking for hobbies in Newcastle NSW? Discover active, creative, and social hobbies to try. From table tennis to surfing to art classes - find what suits you."
  schema={combinedSchema}
>
  <!-- Breadcrumb -->
  <nav class="bg-gray-100 py-3 px-4 text-sm">
    <div class="max-w-3xl mx-auto">
      <a href="/" class="text-blue-600 hover:underline">Home</a>
      <span class="mx-2 text-gray-400">‚Üí</span>
      <a href="/guides" class="text-blue-600 hover:underline">Guides</a>
      <span class="mx-2 text-gray-400">‚Üí</span>
      <span class="text-gray-700">Hobbies in Newcastle</span>
    </div>
  </nav>

  <!-- Hero -->
  <div class="bg-blue-900 py-12">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
      <div class="inline-block bg-green-500 text-white px-3 py-1 rounded-full text-sm font-bold mb-4">Guide</div>
