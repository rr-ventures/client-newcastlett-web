const breadcrumbSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {"@type": "ListItem", "position": 1, "name": "Home", "item": "https://www.newcastletabletennis.com.au/"},
    {"@type": "ListItem", "position": 2, "name": "Guides", "item": "https://www.newcastletabletennis.com.au/guides/"},
    {"@type": "ListItem", "position": 3, "name": "Evening Activities in Newcastle"}
  ]
});

const faqSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What is there to do in Newcastle at night?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Newcastle offers many evening activities beyond bars and restaurants. Options include: table tennis at PCYC Broadmeadow (Monday and Wednesday 6:30pm), social sports leagues, cinema, live music venues, night markets (seasonal), trivia nights, bowling, late-opening gyms, and evening classes. Many people find regular weeknight activities help break up the work-home routine."
      }
    },
    {
      "@type": "Question",
      "name": "What activities are open after work in Newcastle?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "After-work activities in Newcastle include: table tennis club (Mon/Wed from 6:30pm), social sport leagues, gyms with evening hours, swimming at heated pools, evening yoga/fitness classes, cooking classes, art workshops, and various meetup groups. Most organised activities run between 6pm and 9pm to suit working people."
      }
    }
  ]
});

const combinedSchema = `[${breadcrumbSchema},${faqSchema}]`;
