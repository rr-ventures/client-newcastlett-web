---
import Layout from '../layouts/Layout.astro';

// SEO Constants
const pageTitle = "Newcastle Table Tennis Club | PCYC Broadmeadow";
const pageDescription = "Newcastle's premier table tennis club. A friendly, competitive community playing 4-5 times a week at PCYC Broadmeadow. Join us today!";

// Image Gallery
const galleryImages = [
    "/images/hall.jpg",
    "/images/group-photo-2.jpg",
    "/images/group-photo-3.jpg",
    "/images/group-photo-4.jpg"
];
---

<Layout title={pageTitle} description={pageDescription}>
  
  <!-- Hero Section -->
  <section class="relative bg-neutral-900 text-white overflow-hidden h-[600px] flex items-center">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-r from-neutral-950 via-neutral-900/80 to-transparent z-10"></div>
        <img 
            src="/images/hero-image.jpg" 
            alt="Table tennis action at Newcastle PCYC" 
            class="w-full h-full object-cover object-center"
        />
    </div>

    <div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
        <div class="max-w-3xl">
            <div class="flex items-center gap-3 mb-4">
                <span class="inline-block py-1 px-3 rounded bg-brand-600 text-white text-xs font-bold tracking-wider uppercase">
                    Est. 1996
                </span>
                <span class="inline-block py-1 px-3 rounded border border-white/30 text-white text-xs font-bold tracking-wider uppercase backdrop-blur-sm">
                    PCYC Broadmeadow
                </span>
            </div>
            <h1 class="text-5xl sm:text-6xl lg:text-7xl font-heading font-bold tracking-tight text-white mb-6 leading-none drop-shadow-xl uppercase">
                Welcome to <br />
                <span class="text-brand-500">Newcastle Table Tennis</span>
            </h1>
            <p class="text-lg sm:text-xl text-neutral-200 mb-8 leading-relaxed max-w-xl drop-shadow-md font-light">
                Join a passionate community of players. From casual social hits to competitive league play, we welcome everyone to the table.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
                <a href="/timetable" class="inline-flex items-center justify-center px-8 py-4 border border-transparent text-base font-bold uppercase tracking-wide rounded text-white bg-brand-600 hover:bg-brand-700 transition shadow-lg hover:shadow-brand-600/25">
                    First Session Free
                </a>
                <a href="/about" class="inline-flex items-center justify-center px-8 py-4 border-2 border-white text-base font-bold uppercase tracking-wide rounded text-white hover:bg-white hover:text-neutral-900 transition">
                    About the Club
                </a>
            </div>
        </div>
    </div>
  </section>

  <!-- Introduction / Club Culture Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-2 lg:gap-16 items-center">
            <div class="mb-12 lg:mb-0 order-2 lg:order-1">
                 <div class="relative transform hover:scale-[1.01] transition-transform duration-500">
                    <div class="absolute inset-0 bg-black/20 blur-2xl rounded-xl -z-10 transform translate-y-4"></div>
                    <img src="/images/group-photo.jpg" alt="Newcastle Table Tennis Club Members" class="relative rounded-xl shadow-2xl w-full h-auto z-10" />
                 </div>
            </div>
            <div class="order-1 lg:order-2">
                <h2 class="text-4xl font-heading font-bold text-neutral-900 mb-6 uppercase">A Community for Everyone</h2>
                <div class="prose prose-lg text-neutral-600">
                    <p class="mb-4">
                        Newcastle PCYC Table Tennis Club is a volunteer-run community dedicated to the sport we love. We believe table tennis is for everyone—whether you're 8 or 80.
                    </p>
                    <p class="mb-6">
                        We pride ourselves on a culture that balances competitive spirit with genuine friendship. New players are often surprised by how quickly they find a "home" here.
                    </p>
                    
                    <div class="border-l-4 border-brand-600 pl-6 py-2 bg-neutral-50">
                        <p class="text-neutral-800 italic font-medium">
                            "I wasn't that great at table tennis, but I joined. I just came and gave it a go, and I've been hooked ever since. Great way to keep active and social."
                        </p>
                        <p class="text-sm text-brand-600 mt-2 font-bold">— Reece, Member since 2024</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </section>

  <!-- Schedule Preview (List Layout) -->
  <section class="py-24 bg-neutral-100 border-y border-neutral-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-heading font-bold text-neutral-900 uppercase">Weekly Schedule</h2>
            <p class="mt-3 text-lg text-neutral-600 max-w-2xl mx-auto">No booking required—just turn up and play.</p>
        </div>

        <div class="bg-white rounded-2xl shadow-lg border border-neutral-200 overflow-hidden max-w-5xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-4 divide-y md:divide-y-0 md:divide-x divide-neutral-200">
                <!-- Monday -->
                <div class="p-8 text-center hover:bg-neutral-50 transition-colors group">
                    <h3 class="font-heading font-bold text-2xl text-neutral-900 mb-2 uppercase">Monday</h3>
                    <div class="text-brand-600 font-bold mb-3">6:30 PM - 10:00 PM</div>
                    <span class="inline-block bg-neutral-900 text-white text-xs font-bold px-3 py-1 rounded uppercase tracking-wide">Social & Comp</span>
                </div>
                <!-- Wednesday -->
                <div class="p-8 text-center hover:bg-neutral-50 transition-colors group">
                    <h3 class="font-heading font-bold text-2xl text-neutral-900 mb-2 uppercase">Wednesday</h3>
                    <div class="text-brand-600 font-bold mb-3">6:30 PM - 10:00 PM</div>
                    <span class="inline-block bg-neutral-900 text-white text-xs font-bold px-3 py-1 rounded uppercase tracking-wide">Social & Comp</span>
                </div>
                <!-- Saturday -->
                <div class="p-8 text-center hover:bg-neutral-50 transition-colors group">
                    <h3 class="font-heading font-bold text-2xl text-neutral-900 mb-2 uppercase">Saturday</h3>
                    <div class="text-brand-600 font-bold mb-3">2:30 PM - 6:00 PM</div>
                    <span class="inline-block bg-neutral-100 text-neutral-800 border border-neutral-200 text-xs font-bold px-3 py-1 rounded uppercase tracking-wide">Social Play</span>
                </div>
                <!-- Sunday -->
                <div class="p-8 text-center hover:bg-neutral-50 transition-colors group">
                    <h3 class="font-heading font-bold text-2xl text-neutral-900 mb-2 uppercase">Sunday</h3>
                    <div class="text-brand-600 font-bold mb-3">Time Varies</div>
                    <span class="inline-block bg-neutral-100 text-neutral-800 border border-neutral-200 text-xs font-bold px-3 py-1 rounded uppercase tracking-wide">Social Play</span>
                </div>
            </div>
        </div>
        
        <div class="mt-10 text-center">
            <a href="/timetable" class="inline-flex items-center text-neutral-900 font-bold uppercase tracking-wide hover:text-brand-600 transition">
                View Full Timetable Details &rarr;
            </a>
        </div>
    </div>
  </section>

  <!-- Photo Gallery / Montage -->
  <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-4xl font-heading font-bold text-neutral-900 uppercase text-center mb-16">See some photos of our club</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
              {galleryImages.map((img, index) => (
                  <div class={`relative overflow-hidden rounded-xl shadow-md group h-64 ${index === 0 || index === 3 ? 'lg:col-span-2' : ''}`}>
                      <img 
                          src={img} 
                          alt="Club Life" 
                          class="w-full h-full object-contain bg-neutral-100 transform group-hover:scale-105 transition duration-700" 
                      />
                      <div class="absolute inset-0 bg-black/10 group-hover:bg-transparent transition-colors"></div>
                  </div>
              ))}
          </div>
      </div>
  </section>

  <!-- CTA Section -->
  <section class="relative py-24 bg-brand-700 overflow-hidden">
    <!-- Abstract Pattern -->
    <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(#fff 1px, transparent 1px); background-size: 20px 20px;"></div>
    
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-heading font-bold text-white mb-6 uppercase">Ready to hit?</h2>
        <p class="text-xl text-brand-100 mb-10 max-w-2xl mx-auto">
            Your first session is completely free. We'll provide the racket and balls—just bring comfortable clothes and non-marking shoes.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
            <a href="/timetable" class="inline-block bg-white text-brand-900 font-bold py-4 px-8 rounded shadow-lg uppercase tracking-wide hover:bg-neutral-100 transition transform hover:-translate-y-1">
                Claim Free Session
            </a>
            <a href="/location" class="inline-block bg-transparent border-2 border-brand-200 text-white font-bold py-4 px-8 rounded uppercase tracking-wide hover:bg-brand-800 hover:border-brand-800 transition">
                Find Our Venue
            </a>
        </div>
    </div>
  </section>

</Layout>
