---
import Layout from '../layouts/Layout.astro';

// SEO Constants
const pageTitle = "Newcastle Table Tennis Club | PCYC Broadmeadow";
const pageDescription = "Newcastle's premier table tennis club. A friendly, competitive community playing 4-5 times a week at PCYC Broadmeadow. Join us today!";

// Image Gallery with descriptive alt text for SEO
const galleryImages = [
    { src: "/images/hall.jpg", alt: "Table tennis hall at PCYC Newcastle Broadmeadow" },
    { src: "/images/group-photo-2.jpg", alt: "Newcastle Table Tennis Club members at social session" },
    { src: "/images/group-photo-3.jpg", alt: "Players enjoying table tennis at Newcastle PCYC" },
    { src: "/images/group-photo-4.jpg", alt: "Community table tennis event in Newcastle" }
];

// News Data (Sample Data from Images)
const newsItems = [
    {
        title: "2025 NSW Open Championships",
        date: "Sat 29 Nov & Sun 30 Nov 2025",
        summary: "To be held at Sports Halls, Sydney Olympic Park. Entries close Fri 21 Nov.",
        image: "/images/2025-nsw-open-championships.jpg"
    },
    {
        title: "Monday Night Comp (Season 1)",
        date: "Starts Monday Jan 13th, 2025",
        summary: "New season starting! 2 Man Teams. Check-in by 6:30pm for matches. All grades welcome.",
        image: "/images/monday-night-comp.jpg"
    },
    {
        title: "King of the Table",
        date: "Upcoming Event",
        summary: "Win a match go up a table, lose go down. Sudden death 1 game to 11 points! Check flyer for next date.",
        image: "/images/king-of-the-table.jpg"
    }
];
---

<Layout title={pageTitle} description={pageDescription}>
  
  <!-- Hero Section -->
  <section class="relative bg-neutral-900 text-white overflow-hidden h-[600px] flex items-center">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-r from-neutral-950 via-neutral-900/80 to-transparent z-10"></div>
        <img 
            src="/images/hero-image.jpg" 
            alt="Table tennis action at Newcastle PCYC" 
            class="w-full h-full object-cover object-center"
        />
    </div>

    <div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
        <div class="max-w-3xl">
            <div class="flex items-center gap-3 mb-4">
                <span class="inline-block py-1 px-3 rounded bg-white/10 text-white text-xs font-bold tracking-wider uppercase backdrop-blur-sm border border-white/20">
                    Est. 1996
                </span>
                <span class="inline-block py-1 px-3 rounded border border-white/30 text-white text-xs font-bold tracking-wider uppercase backdrop-blur-sm">
                    PCYC Broadmeadow
                </span>
            </div>
            <h1 class="text-5xl sm:text-6xl lg:text-7xl font-heading font-bold tracking-tight text-white mb-6 leading-none drop-shadow-xl uppercase">
                Welcome to <br />
                <span class="text-brand-500">Newcastle Table Tennis</span>
            </h1>
            <p class="text-lg sm:text-xl text-neutral-200 mb-8 leading-relaxed max-w-xl drop-shadow-md font-light">
                Join a passionate community of players. From casual social hits to competitive league play, we welcome everyone to the table.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
                <a href="/timetable" class="inline-flex items-center justify-center px-8 py-4 border-2 border-white text-base font-bold uppercase tracking-wide rounded text-white hover:bg-white hover:text-neutral-900 transition shadow-lg">
                    First Session Free
                </a>
                <a href="/about" class="inline-flex items-center justify-center px-8 py-4 border-2 border-white/50 text-base font-bold uppercase tracking-wide rounded text-white hover:bg-white/10 hover:border-white transition">
                    About the Club
                </a>
            </div>
        </div>
    </div>
  </section>

  <!-- PCYC Affiliation Section -->
  <section class="py-12 bg-white border-b border-neutral-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row items-center justify-center gap-6">
        <div class="flex-shrink-0">
          <img 
            src="/images/pcyc_logo.png" 
            alt="PCYC Newcastle Logo" 
            class="h-16 w-auto object-contain"
          />
        </div>
        <div class="text-center md:text-left">
          <p class="text-lg text-neutral-700 leading-relaxed">
            We play at the <strong class="text-neutral-900">Newcastle PCYC in Broadmeadow</strong>. A welcoming community space for table tennis players of all levels.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- News / Announcements Section -->
  <section class="py-20 bg-neutral-50 border-b border-neutral-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-12">
            <div>
                <h2 class="text-3xl font-heading font-bold text-neutral-900 uppercase">Club News</h2>
                <p class="mt-2 text-lg text-neutral-600">Latest announcements and upcoming events.</p>
            </div>
            <a href="https://www.facebook.com/groups/742238756140959" target="_blank" rel="noopener" class="hidden sm:inline-flex items-center font-bold text-neutral-600 hover:text-neutral-900 uppercase tracking-wide transition">
                More on Facebook &rarr;
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {newsItems.map((item) => (
                <div class="bg-white rounded-xl shadow-sm border border-neutral-200 overflow-hidden hover:shadow-md transition-shadow group cursor-pointer">
                    <div class="h-48 overflow-hidden relative">
                        <img src={item.image} alt={item.title} class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500" />
                        <div class="absolute top-0 right-0 bg-neutral-900 text-white text-xs font-bold px-3 py-1 m-3 rounded uppercase tracking-wide">
                            Event
                        </div>
                    </div>
                    <div class="p-6">
                        <p class="text-xs font-bold text-neutral-500 uppercase tracking-wider mb-2">{item.date}</p>
                        <h3 class="text-lg font-heading font-bold text-neutral-900 mb-2 leading-tight group-hover:text-neutral-700 transition-colors">
                            {item.title}
                        </h3>
                        <p class="text-sm text-neutral-500 line-clamp-3 leading-relaxed">
                            {item.summary}
                        </p>
                    </div>
                </div>
            ))}
        </div>
        
        <div class="mt-8 text-center sm:hidden">
            <a href="https://www.facebook.com/groups/742238756140959" target="_blank" rel="noopener" class="inline-flex items-center font-bold text-neutral-600 hover:text-neutral-900 uppercase tracking-wide transition">
                More on Facebook &rarr;
            </a>
        </div>
    </div>
  </section>

  <!-- Introduction / Club Culture Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-2 lg:gap-16 items-center">
            <div class="mb-12 lg:mb-0 order-2 lg:order-1">
                 <div class="relative transform hover:scale-[1.01] transition-transform duration-500">
                    <div class="absolute inset-0 bg-black/20 blur-2xl rounded-xl -z-10 transform translate-y-4"></div>
                    <img src="/images/group-photo.jpg" alt="Newcastle Table Tennis Club Members" class="relative rounded-xl shadow-2xl w-full h-auto z-10" />
                 </div>
            </div>
            <div class="order-1 lg:order-2">
                <h2 class="text-4xl font-heading font-bold text-neutral-900 mb-6 uppercase">A Community for Everyone</h2>
                <div class="prose prose-lg text-neutral-600">
                    <p class="mb-4">
                        Newcastle PCYC Table Tennis Club is a volunteer-run community dedicated to the sport we love. We believe table tennis is for everyone—whether you're 8 or 80.
                    </p>
                    <p class="mb-6">
                        We pride ourselves on a culture that balances competitive spirit with genuine friendship. New players are often surprised by how quickly they find a "home" here.
                    </p>
                    
                    <div class="border-l-4 border-brand-600 pl-6 py-2 bg-neutral-50">
                        <p class="text-neutral-800 italic font-medium">
                            "I wasn't that great at table tennis, but I joined. I just came and gave it a go, and I've been hooked ever since. Great way to keep active and social."
                        </p>
                        <p class="text-sm text-brand-600 mt-2 font-bold">— Reece, Member since 2024</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </section>

  <!-- Schedule Preview (List Layout) -->
  <section class="py-24 bg-neutral-100 border-y border-neutral-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-heading font-bold text-neutral-900 uppercase">Weekly Schedule</h2>
            <p class="mt-3 text-lg text-neutral-600 max-w-2xl mx-auto">No booking required—just turn up and play.</p>
        </div>

        <div class="bg-white rounded-2xl shadow-lg border border-neutral-200 overflow-hidden max-w-5xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-4 divide-y md:divide-y-0 md:divide-x divide-neutral-200">
                <!-- Monday -->
                <div class="p-8 text-center hover:bg-neutral-50 transition-colors group">
                    <h3 class="font-heading font-bold text-2xl text-neutral-900 mb-2 uppercase">Monday</h3>
                    <div class="text-brand-600 font-bold mb-3">6:30 PM - 10:00 PM</div>
                    <span class="inline-block bg-neutral-900 text-white text-xs font-bold px-3 py-1 rounded uppercase tracking-wide">Social & Comp</span>
                </div>
                <!-- Wednesday -->
                <div class="p-8 text-center hover:bg-neutral-50 transition-colors group">
                    <h3 class="font-heading font-bold text-2xl text-neutral-900 mb-2 uppercase">Wednesday</h3>
                    <div class="text-brand-600 font-bold mb-3">6:30 PM - 10:00 PM</div>
                    <span class="inline-block bg-neutral-900 text-white text-xs font-bold px-3 py-1 rounded uppercase tracking-wide">Social & Comp</span>
                </div>
                <!-- Saturday -->
                <div class="p-8 text-center hover:bg-neutral-50 transition-colors group">
                    <h3 class="font-heading font-bold text-2xl text-neutral-900 mb-2 uppercase">Saturday</h3>
                    <div class="text-brand-600 font-bold mb-3">2:30 PM - 6:00 PM</div>
                    <span class="inline-block bg-neutral-100 text-neutral-800 border border-neutral-200 text-xs font-bold px-3 py-1 rounded uppercase tracking-wide">Social Play</span>
                </div>
                <!-- Sunday -->
                <div class="p-8 text-center hover:bg-neutral-50 transition-colors group">
                    <h3 class="font-heading font-bold text-2xl text-neutral-900 mb-2 uppercase">Sunday</h3>
                    <div class="text-brand-600 font-bold mb-3">Time Varies</div>
                    <span class="inline-block bg-neutral-100 text-neutral-800 border border-neutral-200 text-xs font-bold px-3 py-1 rounded uppercase tracking-wide">Social Play</span>
                </div>
            </div>
        </div>
        
        <div class="mt-10 text-center">
            <a href="/timetable" class="inline-flex items-center text-neutral-900 font-bold uppercase tracking-wide hover:text-brand-600 transition">
                View Full Timetable Details &rarr;
            </a>
        </div>
    </div>
  </section>

  <!-- Photo Gallery / Montage -->
  <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-4xl font-heading font-bold text-neutral-900 uppercase text-center mb-16">See some photos of our club</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
              {galleryImages.map((img) => (
                  <div class="relative overflow-hidden rounded-xl shadow-md group aspect-[4/3]">
                      <img
                          src={img.src}
                          alt={img.alt}
                          class="w-full h-full object-cover transform group-hover:scale-105 transition duration-700"
                      />
                      <div class="absolute inset-0 bg-black/10 group-hover:bg-transparent transition-colors"></div>
                  </div>
              ))}
          </div>
      </div>
  </section>

  <!-- CTA Section -->
  <section class="relative py-24 bg-brand-700 overflow-hidden">
    <!-- Abstract Pattern -->
    <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(#fff 1px, transparent 1px); background-size: 20px 20px;"></div>
    
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-heading font-bold text-white mb-6 uppercase">Ready to hit?</h2>
        <p class="text-xl text-brand-100 mb-10 max-w-2xl mx-auto">
            Your first session is completely free. We'll provide the racket and balls—just wear comfortable sports clothes.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
            <a href="/timetable" class="inline-block bg-white text-neutral-900 font-bold py-4 px-8 rounded shadow-lg uppercase tracking-wide hover:bg-neutral-100 transition transform hover:-translate-y-1">
                Claim Free Session
            </a>
            <a href="/location" class="inline-block bg-transparent border-2 border-white/50 text-white font-bold py-4 px-8 rounded uppercase tracking-wide hover:bg-white/10 hover:border-white transition">
                Find Our Venue
            </a>
        </div>
    </div>
  </section>

</Layout>
