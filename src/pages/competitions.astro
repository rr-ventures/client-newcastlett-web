---
import Layout from '../layouts/Layout.astro';

// Google Spreadsheet ID
const SPREADSHEET_ID = '15u0C_Hvr0ocBUWmtZoOrzLMX_Hy86QwlcQag7-3qBuw';

// Sheet GIDs mapped to each table (in order: 3 draws, 3 individual results, 1 team result)
const SHEET_GIDS = {
    drawAGrade: '0',
    drawBGrade: '1075269248',
    drawCGrade: '454539529',
    resultsIndividualAGrade: '1036329944',
    resultsIndividualBGrade: '1405839057',
    resultsIndividualCGrade: '13597649',
    resultsTeamAGrade: '228892299',
};

// Helper function to generate embed URL with better formatting options
// Note: The sheet must be published to the web for this to work
// File → Share → Publish to web → Select the specific sheet → Publish
function getSheetEmbedUrl(gid: string) {
    return `https://docs.google.com/spreadsheets/d/${SPREADSHEET_ID}/pubhtml?gid=${gid}&single=true&widget=true&headers=false&chrome=false`;
}
---

<Layout title="Competitions | Newcastle Table Tennis" description="Check the latest draws, results, and competition schedules for Newcastle Table Tennis Club.">
    <style>
        /* Improve Google Sheets embed readability */
        iframe[title*="Draw"],
        iframe[title*="Results"] {
            filter: brightness(1.02) contrast(1.05);
        }
        
        /* Better spacing for embedded sheets */
        .sheet-container {
            background: white;
            border-radius: 0.75rem;
            overflow: hidden;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
        }
        
        .sheet-header {
            background: linear-gradient(to bottom, #f9fafb, #f3f4f6);
            border-bottom: 2px solid #e5e7eb;
        }
    </style>
    <div class="bg-neutral-50 py-16 min-h-screen">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="mb-12 text-center md:text-left">
                <h1 class="text-4xl font-heading font-bold text-neutral-900 uppercase mb-3">Competition Draws</h1>
                <p class="text-lg text-neutral-600">View upcoming matches and current season standings.</p>
            </div>
            
            <!-- Draws Section -->
            <section class="mb-16">
                <div class="mb-8">
                    <h2 class="text-3xl font-heading font-bold text-neutral-900 uppercase mb-2">Page for the Draws</h2>
                    <h3 class="text-xl font-heading font-semibold text-neutral-700">Summer Comp 26</h3>
                </div>
                
                <!-- Three Draw Tables -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 mb-8">
                    <!-- A Grade Draw -->
                    <div class="sheet-container">
                        <div class="sheet-header p-5">
                            <h4 class="text-lg font-heading font-bold text-neutral-900 uppercase tracking-wide">A Grade</h4>
                        </div>
                        <div class="relative bg-white" style="padding-bottom: 80%; height: 0; overflow: hidden; min-height: 400px;">
                            <iframe 
                                src={getSheetEmbedUrl(SHEET_GIDS.drawAGrade)}
                                style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0;"
                                title="A Grade Draw"
                                loading="lazy"
                                class="w-full h-full"
                            ></iframe>
                        </div>
                    </div>

                    <!-- B Grade Draw -->
                    <div class="sheet-container">
                        <div class="sheet-header p-5">
                            <h4 class="text-lg font-heading font-bold text-neutral-900 uppercase tracking-wide">B Grade</h4>
                        </div>
                        <div class="relative bg-white" style="padding-bottom: 80%; height: 0; overflow: hidden; min-height: 400px;">
                            <iframe 
                                src={getSheetEmbedUrl(SHEET_GIDS.drawBGrade)}
                                style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0;"
                                title="B Grade Draw"
                                loading="lazy"
                                class="w-full h-full"
                            ></iframe>
                        </div>
                    </div>

                    <!-- C Grade Draw -->
                    <div class="sheet-container">
                        <div class="sheet-header p-5">
                            <h4 class="text-lg font-heading font-bold text-neutral-900 uppercase tracking-wide">C Grade</h4>
                        </div>
                        <div class="relative bg-white" style="padding-bottom: 80%; height: 0; overflow: hidden; min-height: 400px;">
                            <iframe 
                                src={getSheetEmbedUrl(SHEET_GIDS.drawCGrade)}
                                style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0;"
                                title="C Grade Draw"
                                loading="lazy"
                                class="w-full h-full"
                            ></iframe>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Results Section -->
            <section class="mb-16">
                <div class="mb-8">
                    <h2 class="text-3xl font-heading font-bold text-neutral-900 uppercase mb-4">Results Individuals</h2>
                    <div class="flex flex-col sm:flex-row gap-4">
                        <a href="#" class="text-brand-600 hover:text-brand-700 underline text-base font-medium transition-colors">Individual Game Results (Ratings Central)</a>
                        <a href="#" class="text-brand-600 hover:text-brand-700 underline text-base font-medium transition-colors">Team Points Table</a>
                    </div>
                </div>

                <!-- Three Individual Results Tables -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 mb-8">
                    <!-- A Grade Individual Results -->
                    <div class="sheet-container">
                        <div class="sheet-header p-5">
                            <h4 class="text-lg font-heading font-bold text-neutral-900 uppercase tracking-wide">A Grade</h4>
                        </div>
                        <div class="relative bg-white" style="padding-bottom: 80%; height: 0; overflow: hidden; min-height: 400px;">
                            <iframe 
                                src={getSheetEmbedUrl(SHEET_GIDS.resultsIndividualAGrade)}
                                style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0;"
                                title="A Grade Individual Results"
                                loading="lazy"
                                class="w-full h-full"
                            ></iframe>
                        </div>
                    </div>

                    <!-- B Grade Individual Results -->
                    <div class="sheet-container">
                        <div class="sheet-header p-5">
                            <h4 class="text-lg font-heading font-bold text-neutral-900 uppercase tracking-wide">B Grade</h4>
                        </div>
                        <div class="relative bg-white" style="padding-bottom: 80%; height: 0; overflow: hidden; min-height: 400px;">
                            <iframe 
                                src={getSheetEmbedUrl(SHEET_GIDS.resultsIndividualBGrade)}
                                style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0;"
                                title="B Grade Individual Results"
                                loading="lazy"
                                class="w-full h-full"
                            ></iframe>
                        </div>
                    </div>

                    <!-- C Grade Individual Results -->
                    <div class="sheet-container">
                        <div class="sheet-header p-5">
                            <h4 class="text-lg font-heading font-bold text-neutral-900 uppercase tracking-wide">C Grade</h4>
                        </div>
                        <div class="relative bg-white" style="padding-bottom: 80%; height: 0; overflow: hidden; min-height: 400px;">
                            <iframe 
                                src={getSheetEmbedUrl(SHEET_GIDS.resultsIndividualCGrade)}
                                style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0;"
                                title="C Grade Individual Results"
                                loading="lazy"
                                class="w-full h-full"
                            ></iframe>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Team Results Section -->
            <section class="mb-16">
                <h2 class="text-3xl font-heading font-bold text-neutral-900 uppercase mb-8">Results Teams</h2>
                
                <!-- Team Results Table -->
                <div class="grid grid-cols-1 lg:grid-cols-1 gap-4">
                    <!-- A Grade Team Results -->
                    <div class="sheet-container">
                        <div class="sheet-header p-5">
                            <h4 class="text-lg font-heading font-bold text-neutral-900 uppercase tracking-wide">A Grade</h4>
                        </div>
                        <div class="relative bg-white" style="padding-bottom: 50%; height: 0; overflow: hidden; min-height: 350px;">
                            <iframe 
                                src={getSheetEmbedUrl(SHEET_GIDS.resultsTeamAGrade)}
                                style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0;"
                                title="A Grade Team Results"
                                loading="lazy"
                                class="w-full h-full"
                            ></iframe>
                        </div>
                    </div>
                </div>
            </section>
            
            <p class="text-center text-sm text-neutral-400 mt-6">
                Data is updated weekly. Contact the match secretary for corrections.
            </p>
        </div>
    </div>
</Layout>
