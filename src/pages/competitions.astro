---
import Layout from '../layouts/Layout.astro';

// Google Spreadsheet ID - Update this with the actual spreadsheet ID once published
// The spreadsheet ID is the long string in the Google Sheets URL:
// https://docs.google.com/spreadsheets/d/[SPREADSHEET_ID]/edit
const SPREADSHEET_ID = 'YOUR_SPREADSHEET_ID_HERE';

// Sheet GIDs for the Summer Comp 2026
// To find the GID: Open the sheet tab, look at the URL - it shows ?gid=XXXXXXX
// Each sheet tab has a unique GID
const SHEET_GIDS = {
    // Competition Draw - 7 rounds of team matchups
    draw: 'DRAW_GID_HERE',
    
    // Team Rosters - Who's on each team
    teams: 'TEAMS_GID_HERE',
    
    // Team Results/Standings - Current leaderboard
    results: 'RESULTS_GID_HERE',
    
    // Player Ratings (optional - from "All" or "Primary Members" sheet)
    playerRatings: 'PLAYER_RATINGS_GID_HERE',
};

// Helper function to generate embed URL
// Note: The sheet must be published to the web for this to work
// File → Share → Publish to web → Select the specific sheet → Publish
function getSheetEmbedUrl(gid: string) {
    return `https://docs.google.com/spreadsheets/d/${SPREADSHEET_ID}/pubhtml?gid=${gid}&single=true&widget=true&headers=false&chrome=false&rm=minimal`;
}
---

<Layout title="Competitions | Newcastle Table Tennis" description="Check the latest draws, results, and competition schedules for Newcastle Table Tennis Club.">
    <style>
        /* Improve Google Sheets embed readability */
        iframe {
            filter: brightness(1.02) contrast(1.05);
        }
        
        /* Better spacing for embedded sheets */
        .sheet-container {
            background: white;
            border-radius: 0.75rem;
            overflow: hidden;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
        }
        
        .sheet-header {
            background: linear-gradient(to bottom, #f9fafb, #f3f4f6);
            border-bottom: 2px solid #e5e7eb;
        }

        /* Tab styles */
        .tab-btn {
            transition: all 0.2s ease;
        }
        .tab-btn.active {
            border-color: #dc2626;
            color: #dc2626;
        }
        .tab-btn:not(.active) {
            border-color: transparent;
            color: #6b7280;
        }
        .tab-btn:not(.active):hover {
            color: #374151;
        }
    </style>

    <script>
        function switchTab(tab: string) {
            // Hide all sections
            document.getElementById('section-current')?.classList.add('hidden');
            document.getElementById('section-previous')?.classList.add('hidden');
            
            // Remove active styles from all tabs
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Show selected section and activate tab
            if (tab === 'current') {
                document.getElementById('section-current')?.classList.remove('hidden');
                document.getElementById('tab-current')?.classList.add('active');
            } else {
                document.getElementById('section-previous')?.classList.remove('hidden');
                document.getElementById('tab-previous')?.classList.add('active');
            }
        }
    </script>

    <div class="bg-neutral-50 py-16 min-h-screen">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="mb-12 text-center md:text-left">
                <h1 class="text-4xl font-heading font-bold text-neutral-900 uppercase mb-3">Competitions</h1>
                <p class="text-lg text-neutral-600">View current competition draws, team rosters, and standings.</p>
            </div>

            <!-- Tab Switcher -->
            <div class="mb-8 flex gap-4 border-b border-neutral-200">
                <button 
                    id="tab-current" 
                    class="tab-btn active px-6 py-3 text-base font-heading font-bold uppercase tracking-wide border-b-2"
                    onclick="switchTab('current')"
                >
                    Current Competition
                </button>
                <button 
                    id="tab-previous" 
                    class="tab-btn px-6 py-3 text-base font-heading font-bold uppercase tracking-wide border-b-2"
                    onclick="switchTab('previous')"
                >
                    Previous Competitions
                </button>
            </div>
            
            <!-- Current Competition Section -->
            <section id="section-current" class="space-y-12">
                
                <!-- Competition Header -->
                <div class="bg-gradient-to-r from-brand-600 to-brand-700 rounded-xl p-6 text-white shadow-lg">
                    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                        <div>
                            <h2 class="text-2xl md:text-3xl font-heading font-bold uppercase">Summer Comp 2026</h2>
                            <p class="text-brand-100 mt-1">8 Teams • 7 Rounds • Wednesday Nights</p>
                        </div>
                        <div class="flex gap-3">
                            <a href="#draw" class="bg-white/20 hover:bg-white/30 px-4 py-2 rounded-lg text-sm font-bold uppercase tracking-wide transition">
                                Draw
                            </a>
                            <a href="#teams" class="bg-white/20 hover:bg-white/30 px-4 py-2 rounded-lg text-sm font-bold uppercase tracking-wide transition">
                                Teams
                            </a>
                            <a href="#standings" class="bg-white/20 hover:bg-white/30 px-4 py-2 rounded-lg text-sm font-bold uppercase tracking-wide transition">
                                Standings
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Competition Draw -->
                <div id="draw">
                    <h2 class="text-2xl font-heading font-bold text-neutral-900 uppercase mb-6">Competition Draw</h2>
                    <p class="text-neutral-600 mb-4">7 rounds of team matches. Each team plays every other team once.</p>
                    
                    <div class="sheet-container">
                        <div class="sheet-header p-5">
                            <h3 class="text-lg font-heading font-bold text-neutral-900 uppercase tracking-wide">Round Schedule</h3>
                        </div>
                        <div class="relative bg-white" style="min-height: 400px; height: 500px;">
                            <iframe 
                                src={getSheetEmbedUrl(SHEET_GIDS.draw)}
                                style="width: 100%; height: 100%; border: 0;"
                                title="Competition Draw"
                                loading="lazy"
                            ></iframe>
                        </div>
                    </div>
                </div>

                <!-- Team Rosters -->
                <div id="teams">
                    <h2 class="text-2xl font-heading font-bold text-neutral-900 uppercase mb-6">Team Rosters</h2>
                    <p class="text-neutral-600 mb-4">8 teams of 3 players each.</p>
                    
                    <div class="sheet-container">
                        <div class="sheet-header p-5">
                            <h3 class="text-lg font-heading font-bold text-neutral-900 uppercase tracking-wide">Teams & Players</h3>
                        </div>
                        <div class="relative bg-white" style="min-height: 350px; height: 450px;">
                            <iframe 
                                src={getSheetEmbedUrl(SHEET_GIDS.teams)}
                                style="width: 100%; height: 100%; border: 0;"
                                title="Team Rosters"
                                loading="lazy"
                            ></iframe>
                        </div>
                    </div>
                </div>

                <!-- Team Standings -->
                <div id="standings">
                    <h2 class="text-2xl font-heading font-bold text-neutral-900 uppercase mb-6">Team Standings</h2>
                    <p class="text-neutral-600 mb-4">Current leaderboard based on match points, games, and sets.</p>
                    
                    <div class="sheet-container">
                        <div class="sheet-header p-5">
                            <h3 class="text-lg font-heading font-bold text-neutral-900 uppercase tracking-wide">Leaderboard</h3>
                        </div>
                        <div class="relative bg-white" style="min-height: 350px; height: 450px;">
                            <iframe 
                                src={getSheetEmbedUrl(SHEET_GIDS.results)}
                                style="width: 100%; height: 100%; border: 0;"
                                title="Team Standings"
                                loading="lazy"
                            ></iframe>
                        </div>
                    </div>
                </div>

                <!-- Player Ratings (Optional) -->
                <div id="ratings">
                    <h2 class="text-2xl font-heading font-bold text-neutral-900 uppercase mb-6">Player Ratings</h2>
                    <p class="text-neutral-600 mb-4">Current player ratings from Ratings Central.</p>
                    
                    <div class="sheet-container">
                        <div class="sheet-header p-5">
                            <h3 class="text-lg font-heading font-bold text-neutral-900 uppercase tracking-wide">Club Rankings</h3>
                        </div>
                        <div class="relative bg-white" style="min-height: 400px; height: 500px;">
                            <iframe 
                                src={getSheetEmbedUrl(SHEET_GIDS.playerRatings)}
                                style="width: 100%; height: 100%; border: 0;"
                                title="Player Ratings"
                                loading="lazy"
                            ></iframe>
                        </div>
                    </div>
                </div>

                <!-- External Links -->
                <div class="bg-white rounded-xl shadow-sm border border-neutral-200 p-6">
                    <h3 class="text-lg font-heading font-bold text-neutral-900 uppercase mb-4">External Resources</h3>
                    <div class="flex flex-wrap gap-4">
                        <a 
                            href="https://www.ratingscentral.com/" 
                            target="_blank" 
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 text-brand-600 hover:text-brand-700 font-medium transition-colors"
                        >
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                            </svg>
                            Ratings Central
                        </a>
                        <a 
                            href="https://www.tabletennisnsw.org.au/" 
                            target="_blank" 
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 text-brand-600 hover:text-brand-700 font-medium transition-colors"
                        >
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                            </svg>
                            Table Tennis NSW
                        </a>
                    </div>
                </div>
            </section>

            <!-- Previous Competitions Section -->
            <section id="section-previous" class="hidden">
                <div class="mb-8">
                    <h2 class="text-3xl font-heading font-bold text-neutral-900 uppercase mb-2">Previous Competitions</h2>
                    <p class="text-lg text-neutral-600">Archive of past competition results and draws.</p>
                </div>
                
                <!-- Archive Cards -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <div class="bg-white rounded-xl shadow-sm border border-neutral-200 p-6 hover:shadow-md transition-shadow">
                        <h3 class="font-heading font-bold text-neutral-900 uppercase mb-2">Spring Comp 2025</h3>
                        <p class="text-neutral-600 text-sm mb-4">September - November 2025</p>
                        <p class="text-neutral-500 text-sm">Results coming soon...</p>
                    </div>
                    
                    <div class="bg-white rounded-xl shadow-sm border border-neutral-200 p-6 hover:shadow-md transition-shadow">
                        <h3 class="font-heading font-bold text-neutral-900 uppercase mb-2">Winter Comp 2025</h3>
                        <p class="text-neutral-600 text-sm mb-4">June - August 2025</p>
                        <p class="text-neutral-500 text-sm">Results coming soon...</p>
                    </div>
                    
                    <div class="bg-white rounded-xl shadow-sm border border-neutral-200 p-6 hover:shadow-md transition-shadow">
                        <h3 class="font-heading font-bold text-neutral-900 uppercase mb-2">Autumn Comp 2025</h3>
                        <p class="text-neutral-600 text-sm mb-4">March - May 2025</p>
                        <p class="text-neutral-500 text-sm">Results coming soon...</p>
                    </div>
                </div>
            </section>
            
            <p class="text-center text-sm text-neutral-400 mt-12">
                Data is updated weekly. Contact the match secretary for corrections.
            </p>
        </div>
    </div>
</Layout>
