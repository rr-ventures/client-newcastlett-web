---
const nextSession = "Wednesday 6:30 PM"; // TODO: Implement dynamic logic
---
<section class="bg-blue-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl font-extrabold tracking-tight sm:text-5xl md:text-6xl">
            Table Tennis in Newcastle
        </h1>
        <p class="mt-6 text-xl text-blue-100 max-w-3xl mx-auto">
            PCYC Broadmeadow. Competitive & Social. First Session Free.
        </p>
    </div>
</section>

<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-10 relative z-10">
    <div class="bg-white rounded-lg shadow-xl p-6 sm:p-10 text-center border-t-4 border-blue-500">
        <h2 class="text-lg font-bold text-gray-500 uppercase tracking-wide">Next Session</h2>
        <p class="text-3xl sm:text-4xl font-bold text-gray-900 mt-2">{nextSession}</p>
        <div class="mt-6">
             <a href="/timetable" class="inline-block bg-blue-600 border border-transparent py-3 px-8 rounded-md font-medium text-white hover:bg-blue-700 transition">View Full Timetable</a>
        </div>
    </div>
</section>

<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Weekly Schedule</h2>
    <div class="grid gap-6 md:grid-cols-3">
        <!-- Mon -->
        <div class="bg-gray-50 p-6 rounded-lg border border-gray-200 hover:shadow-md transition">
            <h3 class="text-xl font-bold text-gray-900">Monday</h3>
            <p class="text-blue-600 font-semibold mt-2">6:30 PM - 10:00 PM</p>
            <p class="text-sm text-gray-500 mt-4">Social & Competition</p>
        </div>
        <!-- Wed -->
        <div class="bg-gray-50 p-6 rounded-lg border border-gray-200 hover:shadow-md transition">
            <h3 class="text-xl font-bold text-gray-900">Wednesday</h3>
            <p class="text-blue-600 font-semibold mt-2">6:30 PM - 10:00 PM</p>
            <p class="text-sm text-gray-500 mt-4">Social & Practice</p>
        </div>
        <!-- Sat -->
        <div class="bg-gray-50 p-6 rounded-lg border border-gray-200 hover:shadow-md transition">
            <h3 class="text-xl font-bold text-gray-900">Saturday</h3>
            <p class="text-blue-600 font-semibold mt-2">2:30 PM - 6:00 PM</p>
            <p class="text-sm text-gray-500 mt-4">Open Session</p>
        </div>
    </div>
</section>

<section class="bg-gray-100 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Location</h2>
        <div class="bg-gray-300 w-full h-64 rounded-lg flex items-center justify-center text-gray-500 font-medium overflow-hidden">
            <!-- Placeholder for map -->
            <div class="text-center p-4">
                <p>Google Maps Embed TBA</p>
                <p class="text-sm mt-2">PCYC Newcastle, Broadmeadow NSW</p>
            </div>
        </div>
        <div class="mt-6 text-center">
             <a href="/location" class="text-blue-600 font-medium hover:underline">Get Directions &rarr;</a>
        </div>
    </div>
</section>
