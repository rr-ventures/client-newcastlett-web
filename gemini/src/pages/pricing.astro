---
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="Membership & Pricing | Newcastle Table Tennis"
  description="Affordable table tennis in Newcastle. Casual visits or annual membership available. First session free for new players."
>
  <div class="bg-neutral-50 py-24 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h1 class="text-4xl font-heading font-bold tracking-tight text-neutral-900 mb-4 uppercase">Pricing</h1>
        <p class="text-xl text-neutral-600">
            We keep costs low to make table tennis accessible to everyone in the Hunter region.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto mb-16">
        
        <!-- Casual -->
        <div class="bg-white rounded-xl shadow-sm border border-neutral-200 p-8 flex flex-col">
            <h3 class="text-xl font-heading font-bold text-neutral-900 uppercase">Casual Visit</h3>
            <p class="text-neutral-500 text-sm mt-1">Pay as you go</p>
            <div class="my-6">
                <span class="text-4xl font-bold text-neutral-900">$9</span>
                <span class="text-neutral-500">/session</span>
            </div>
            <ul class="space-y-4 mb-8 flex-grow">
                <li class="flex items-center text-neutral-600">
                    <svg class="w-5 h-5 text-brand-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    Full session access
                </li>
                <li class="flex items-center text-neutral-600">
                    <svg class="w-5 h-5 text-brand-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    Equipment included
                </li>
                <li class="flex items-center text-neutral-600">
                    <svg class="w-5 h-5 text-brand-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    No commitment
                </li>
            </ul>
             <a href="/timetable" class="w-full block text-center py-3 px-4 border border-neutral-300 rounded text-neutral-700 font-bold uppercase tracking-wide hover:bg-neutral-50 transition">
                View Times
            </a>
        </div>

        <!-- Annual -->
        <div class="bg-neutral-900 rounded-xl shadow-xl border border-neutral-800 p-8 flex flex-col relative transform md:-translate-y-4">
            <div class="absolute top-0 right-0 -mt-3 mr-3">
                 <span class="inline-flex items-center px-3 py-1 rounded bg-brand-600 text-white text-xs font-bold uppercase tracking-wide">
                    Best Value
                 </span>
            </div>
            <h3 class="text-xl font-heading font-bold text-white uppercase">Annual Membership</h3>
            <p class="text-neutral-400 text-sm mt-1">For regular players</p>
            <div class="my-6">
                <span class="text-4xl font-bold text-white">$40</span>
                <span class="text-neutral-400">/year</span>
            </div>
            <ul class="space-y-4 mb-8 flex-grow">
                 <li class="flex items-center text-neutral-200">
                    <svg class="w-5 h-5 text-brand-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    Unlimited sessions
                </li>
                <li class="flex items-center text-neutral-200">
                    <svg class="w-5 h-5 text-brand-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    Voting rights
                </li>
                 <li class="flex items-center text-neutral-200">
                    <svg class="w-5 h-5 text-brand-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    Support the club
                </li>
            </ul>
            <a href="/location" class="w-full block text-center py-3 px-4 bg-brand-600 rounded text-white font-bold uppercase tracking-wide hover:bg-brand-700 transition shadow-lg">
                Join Now
            </a>
        </div>

        <!-- First Session -->
        <div class="bg-white rounded-xl shadow-sm border border-neutral-200 p-8 flex flex-col">
            <h3 class="text-xl font-heading font-bold text-neutral-900 uppercase">First Session</h3>
            <p class="text-neutral-500 text-sm mt-1">New to the club?</p>
            <div class="my-6">
                <span class="text-4xl font-bold text-brand-600">Free</span>
            </div>
            <ul class="space-y-4 mb-8 flex-grow">
                <li class="flex items-center text-neutral-600">
                    <svg class="w-5 h-5 text-brand-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    One-time pass
                </li>
                <li class="flex items-center text-neutral-600">
                    <svg class="w-5 h-5 text-brand-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    Meet the community
                </li>
                <li class="flex items-center text-neutral-600">
                    <svg class="w-5 h-5 text-brand-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    All equipment provided
                </li>
            </ul>
             <a href="/timetable" class="w-full block text-center py-3 px-4 border-2 border-brand-600 text-brand-600 bg-white rounded font-bold uppercase tracking-wide hover:bg-brand-50 transition">
                Come & Try
            </a>
        </div>
      </div>

      <div class="max-w-3xl mx-auto bg-neutral-100 rounded-xl p-8 border border-neutral-200">
         <div class="flex flex-col md:flex-row items-center justify-between gap-6">
            <div>
                <h3 class="text-lg font-heading font-bold text-neutral-900 uppercase">Payment Methods</h3>
                <p class="text-neutral-600 mt-1">We accept Cash and Card/EFTPOS at the venue.</p>
            </div>
            <div class="flex gap-3 opacity-60 grayscale hover:grayscale-0 transition-all duration-500">
                <span class="text-2xl font-heading font-bold text-neutral-400 tracking-tighter">VISA</span>
                <span class="text-2xl font-heading font-bold text-neutral-400 tracking-tighter">Mastercard</span>
            </div>
         </div>
      </div>

    </div>
  </div>
</Layout>
