---
import Layout from '../layouts/Layout.astro';

const sessions = [
    { 
        day: "Monday", 
        time: "6:30 PM - 10:00 PM", 
        title: "Social & Competition",
        description: "Organized competition play for graded players, plus social tables for casual hits.",
        tag: "Competition"
    },
    { 
        day: "Wednesday", 
        time: "6:30 PM - 10:00 PM", 
        title: "Social & Practice",
        description: "Open practice session. Coaching tips often available. Great for improving skills.",
        tag: "Social"
    },
    { 
        day: "Saturday", 
        time: "2:30 PM - 6:00 PM", 
        title: "Open Session",
        description: "Relaxed weekend session suitable for families, beginners, and regular members.",
        tag: "All Levels"
    },
];
---

<Layout title="Weekly Timetable | Newcastle Table Tennis" description="Play table tennis in Newcastle on Monday nights, Wednesday nights, and Saturday afternoons. See our full schedule.">
  <div class="bg-neutral-50 min-h-screen py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <div class="text-center mb-12">
        <h1 class="text-3xl md:text-4xl font-bold text-neutral-900 tracking-tight mb-4">Weekly Session Times</h1>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
            We play three times a week at PCYC Broadmeadow. No booking requiredâ€”just turn up and play.
        </p>
      </div>
      
      <div class="bg-white rounded-2xl shadow-sm border border-neutral-200 overflow-hidden divide-y divide-neutral-100">
        {sessions.map(session => (
            <div class="p-6 md:p-8 hover:bg-neutral-50 transition-colors group">
                <div class="flex flex-col md:flex-row md:items-start justify-between gap-4">
                    <div class="flex-grow">
                        <div class="flex items-center gap-3 mb-2">
                            <h2 class="text-2xl font-bold text-neutral-900">{session.day}</h2>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-50 text-primary-700 border border-primary-100">
                                {session.tag}
                            </span>
                        </div>
                        <div class="flex items-center text-primary-600 font-semibold mb-3">
                            <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            {session.time}
                        </div>
                        <p class="text-neutral-600 leading-relaxed">
                            {session.description}
                        </p>
                    </div>
                    <div class="md:text-right flex-shrink-0 mt-2 md:mt-0">
                         <!-- Optional CTA per session if needed, otherwise clean -->
                    </div>
                </div>
            </div>
        ))}
      </div>

      <div class="mt-8 bg-white p-6 rounded-xl border border-neutral-200 shadow-sm flex flex-col md:flex-row items-center justify-between gap-6">
        <div class="flex items-start gap-4">
            <div class="bg-primary-50 p-3 rounded-lg text-primary-600">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <div>
                <h3 class="font-bold text-neutral-900">Important Info</h3>
                <p class="text-neutral-600 text-sm mt-1">
                    Please arrive 15 minutes early for registration. All equipment can be provided.
                </p>
            </div>
        </div>
        <div class="flex-shrink-0">
             <a href="/pricing" class="text-primary-600 font-semibold hover:text-primary-700 text-sm hover:underline">
                View Pricing &rarr;
            </a>
        </div>
      </div>
      
    </div>
  </div>
</Layout>
